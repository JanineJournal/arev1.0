{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container blanc" style="min-height: 55em;">

        <div class="col-lg-12"><h1 class="page-header">Bienvenue dans l'outil de VErification des RAccordements « VERA
                »</h1>
            <div class="row">

                {% if app.user %}

                    <!-- The Modal -->
                    <div id="myModal" class="modal">

                        <!-- Modal content -->
                        <div class="modal-content text-center">
                            <span class="close">&times;</span>
                            {#    <p>Début de la fin des tests : Lancement Imminent ... <br> Merci pour votre collaboration !
                                <hr>#}
                            <img src="{{ asset('img/welcome.png') }}" alt="Image de Bienvenue" style="width: 60%"></p>
                        </div>

                    </div>


                    <div class="panel panel-default ">
                        <div class="panel-heading" style="display: none">
                        </div>
                        <div class="panel-body">
                            {% if is_granted('ROLE_USER') %}
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('listeFiches' ) }}">
                                        <img src="{{ asset('img/arev (8).png') }}"/>
                                        <hr>
                                        Liste des <br>Fiches</a>
                                </div>
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('afficherDossier' ) }}">
                                        <img src="{{ asset('img/arev (6).png') }}"/>
                                        <hr>
                                        Chercher Dossier <br>Racco</a>
                                </div>
                            {% endif %}

                            {% if is_granted('ROLE_SUPER_ADMIN') %}
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('superadmin') }}">
                                        <img src="{{ asset('img/arev (0).png') }}"/>
                                        <hr>
                                        Super <br>Administrateur</a>
                                </div>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('admin' ) }}">
                                        <img src="{{ asset('img/arev (24).png') }}"/>
                                        <hr>
                                        Espace <br>Administrateur</a>
                                </div>
                            {% endif %}
                            {% if is_granted('ROLE_RACCO') %}
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('choix' ) }}">
                                        <img src="{{ asset('img/arev (5).png') }}"/>
                                        <hr>
                                        Nouvelle <br> Intervention</a>
                                </div>
                            {% endif %}
                            {% if (is_granted('ROLE_RACCO') or is_granted ('ROLE_FACTU'))  %}
                                <div class="col-md-4 text-center">
                                    <a class="btn btnAcc" href="{{ path('report') }}">
                                        <img src="{{ asset('img/dossier.png') }}"/>
                                        <hr>
                                        Liste <br>90 jours</a>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                {% elseif not app.user %}
                    <div class="panel panel-default ">
                        <div class="panel-heading" style="display: none">
                        </div>
                        <div class="panel-body SAUV text-center">
                            {#   <div class="col-sm-6">
                                   <a class="btn-xl btn"
                                      href="{{ path('fos_user_registration_register') }}">S'inscrire</a>
                               </div>#}
                            <div class="col-sm-12">
                                <a class="btn-xl btn" href="{{ path('fos_user_security_login') }}">Se
                                    Connecter</a>
                            </div>
                        </div>
                    </div>

                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}


    {% block javascripts %}
        {{ parent() }}
        <script type="text/javascript">

            $(document).ready(function () {
// Get the modal
                var modal = document.getElementById('myModal');

// Get the <span> element that closes the modal
                var span = document.getElementsByClassName("close")[0];

                window.onload = function () {

                    modal.style.display = "block";
                    setTimeout(function () {
                        modal.style.display = "none";
                    }, 3000) // 3 seconds.
                }

// When the user clicks on <span> (x), close the modal
                span.onclick = function () {
                    modal.style.display = "none";
                }

// When the user clicks anywhere outside of the modal, close it
                window.onclick = function (event) {
                    if (event.target == modal) {
                        modal.style.display = "none";
                    }
                }
            });
        </script>
    {% endblock %}
